@using MudBlazor
@inherits LayoutComponentBase

<MudThemeProvider/>


<MudLayout>
    <MudAppBar>
        <MudIconButton Color="Color.Secondary" Icon="@Icons.Material.Filled.Menu"
                   OnClick="_ => IsDrawerOpen = !IsDrawerOpen"
                   Variant="Variant.Filled" />
    </MudAppBar>
    <MudDrawer ClipMode="DrawerClipMode.Always" Variant="DrawerVariant.Persistent" @bind-Open="IsDrawerOpen">
        <MudNavMenu>
            <MudNavLink Href="/login" Icon="@Icons.Material.Filled.Login">Login</MudNavLink>
            <MudNavLink Href="/" Icon="@Icons.Material.Filled.Home">Médicos</MudNavLink>
            <MudNavLink Href="/edit-medico/0" Icon="@Icons.Material.Filled.Edit">Editar Médico</MudNavLink>
            <MudNavLink Href="/edit-paciente/0" Icon="@Icons.Material.Filled.Edit">Editar Paciente</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code
{
    bool IsDrawerOpen;
}